@model IEnumerable<SnowStoreWeb.Models.Product>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý sản phẩm";
}
<h2>📦 Quản lý sản phẩm</h2>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Danh mục</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>HOT</th>
            <th>Bán chạy</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductId</td>
                <td>@p.Name</td>
                <td>@p.Category?.Name</td>
                <td>@p.Price.ToString("N0") đ</td>
                <td>@p.StockQuantity</td>
                <td>@(p.IsHot == true ? "✅" : "❌")</td>
                <td>@(p.IsBestSeller == true ? "🔥" : "❌")</td>
            </tr>
        }
    </tbody>
</table>
