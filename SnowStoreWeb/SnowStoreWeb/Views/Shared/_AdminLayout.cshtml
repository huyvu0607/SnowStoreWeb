@*
    Layout dành riêng cho Admin - Modern Design
    File: Views/Shared/_AdminLayout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - SnowStoreWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 5 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap JS (bundle với Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin-body">
    <!-- Top Header -->
    <header class="admin-header">
        <div class="header-content">
            <!-- Left Section -->
            <div class="header-left">
                <button class="sidebar-toggle" id="sidebarToggle" type="button">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
                <div class="brand-section">
                    <a class="brand-link" asp-controller="Admin" asp-action="Index">
                        <div class="brand-icon">
                            <i class="bi bi-snow3"></i>
                        </div>
                        <div class="brand-text">
                            <span class="brand-name">SnowStore</span>
                            <span class="brand-subtitle">Admin Panel</span>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Center Section - Search -->
            <div class="header-center">
                <div class="search-container">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" placeholder="Tìm kiếm..." class="search-input">
                    <div class="search-shortcut">Ctrl+K</div>
                </div>
            </div>

            <!-- Right Section -->
            <div class="header-right">
                <!-- Home Link -->
                <a class="header-link" asp-controller="Home" asp-action="Index" title="Quay về trang chính">
                    <i class="bi bi-house-door"></i>
                    <span>Trang chính</span>
                </a>

                <!-- Notifications -->
               @*  <div class="notification-dropdown">
                    <button class="notification-btn">
                        <i class="bi bi-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                </div> *@

                <!-- User Dropdown -->
                <div class="user-dropdown">
                    <button class="user-btn" id="userDropdown" data-bs-toggle="dropdown">
                        <div class="user-avatar">
                            <img src="https://ui-avatars.com/api/?name=Admin&background=6366f1&color=fff&size=32" alt="Admin">
                        </div>
                        <div class="user-info">
                            <span class="user-name">Admin</span>
                            <span class="user-role">Quản trị viên</span>
                        </div>
                        <i class="bi bi-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end user-menu">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i>Thông tin cá nhân</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i>Cài đặt</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-question-circle"></i>Trợ giúp</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item logout-link" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i>Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <!-- Sidebar Navigation -->
    <nav class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-content">
            <!-- Dashboard Section -->
            <div class="nav-section">
                <div class="nav-title">Tổng quan</div>
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")"
                           asp-controller="Admin" asp-action="Index">
                            <div class="nav-icon">
                                <i class="bi bi-speedometer2"></i>
                            </div>
                            <span class="nav-text">Dashboard</span>
                            <div class="nav-indicator"></div>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Management Section -->
            <div class="nav-section">
                <div class="nav-title">Quản lý</div>
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminUsers" ? "active" : "")"
                           asp-controller="AdminUsers" asp-action="Index">
                            <div class="nav-icon">
                                <i class="bi bi-people-fill"></i> <!-- 👥 Người dùng -->
                            </div>
                            <span class="nav-text">Người dùng</span>
                            
                            <div class="nav-indicator"></div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminProducts" ? "active" : "")"
                           asp-controller="AdminProducts" asp-action="Index">
                            <div class="nav-icon">
                                <i class="bi bi-box-fill"></i> <!-- 📦 Sản phẩm -->
                            </div>
                            <span class="nav-text">Sản phẩm</span>
                            
                            <div class="nav-indicator"></div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCategories" ? "active" : "")"
                           asp-controller="AdminCategories" asp-action="Index">
                            <div class="nav-icon">
                                <i class="bi bi-folder-fill"></i> <!-- 📂 Danh mục -->
                            </div>
                            <span class="nav-text">Danh mục</span>
                            <div class="nav-indicator"></div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminBrand" ? "active" : "")"
                           asp-controller="AdminBrand" asp-action="Index">
                            <div class="nav-icon">
                                <i class="bi bi-tag-fill"></i> <!-- 🏷️ Thương hiệu -->
                            </div>
                            <span class="nav-text">Thương hiệu</span>
                            <div class="nav-indicator"></div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPopupBanner" ? "active" : "")"
                           asp-controller="AdminPopupBanner" asp-action="Index">
                            <div class="nav-icon">
                                <i class="bi bi-image-fill"></i>

                            </div>
                            <span class="nav-text">Quảng cáo </span>
                            <div class="nav-indicator"></div>
                        </a>
                    </li>
                </ul>
            </div>


            <!-- Analytics Section -->
          

            <!-- Sidebar Footer -->
            <div class="sidebar-footer">
                <div class="version-info">
                    <i class="bi bi-code-square"></i>
                    <span>Version 2.0.0</span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <main class="admin-main">
        <div class="main-content">
            <!-- Breadcrumb -->
            <div class="breadcrumb-section">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-house"></i>
                                <span>Trang chủ</span>
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>

                <!-- Quick Actions -->
                <div class="quick-actions">
                    <button class="quick-btn" title="Refresh">
                        <i class="bi bi-arrow-clockwise"></i>
                    </button>
                    <button class="quick-btn" title="Settings">
                        <i class="bi bi-gear"></i>
                    </button>
                </div>
            </div>

            <!-- Page Content -->
            <div class="page-content">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Loading Indicator -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loading-spinner">
            <div class="spinner"></div>
            <span>Đang tải...</span>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>