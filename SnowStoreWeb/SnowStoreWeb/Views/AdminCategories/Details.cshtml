@model SnowStoreWeb.Models.Category

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Category Details
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">
                                    <i class="bi bi-hash me-1"></i>Category ID
                                </label>
                                <div class="form-control-plaintext bg-light p-3 rounded">
                                    @Html.DisplayFor(model => model.CategoryId)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">
                                    <i class="bi bi-tag me-1"></i>Category Name
                                </label>
                                <div class="form-control-plaintext bg-light p-3 rounded">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">
                                    <i class="bi bi-align-left me-1"></i>Description
                                </label>
                                <div class="form-control-plaintext bg-light p-3 rounded" style="min-height: 120px;">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        @Html.DisplayFor(model => model.Description)
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No description provided</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <hr>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Back to List
                                </a>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">
                                        <i class="bi bi-pencil me-1"></i>Edit Category
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@Model.CategoryId"
                                          method="post" class="d-inline ms-2"
                                          onsubmit="return confirm('Are you sure you want to delete this category? This action cannot be undone.')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash me-1"></i>Delete Category
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>